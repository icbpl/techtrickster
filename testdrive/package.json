
{
  "name": "oktrik-hugo",
  "version": "1.0.0",
  "description": "OKTRIK Hugo site",
  "scripts": {
    "dev": "npm run build:css && hugo server -D --config=config.yaml",
    "build": "npm run build:css && hugo --minify --config=config.yaml",
    "start": "hugo server --config=config.yaml",
    "clean": "rm -rf public resources",
    "build:css": "tailwindcss -i ./assets/css/main.css -o ./static/css/styles.css"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5",
    "tailwindcss-animate": "^1.0.7"
  }
}
